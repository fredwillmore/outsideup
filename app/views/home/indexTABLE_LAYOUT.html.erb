<%= render partial: 'layouts/header' %>

<tr>
  <td colspan="10">
    <!-- approximating new layout area -->
    <div id="container">
        <div class="column-left">
            <%= link_to raw("<button class=\"button\">#{@parent_categories[0].name}</button>"), "parent_categories/#{@parent_categories[0].id}" %>
            <br>
            <%= image_tag @parent_categories[0].photo.url(:medium), alt: @parent_categories[0].name %>
        </div>
        <div class="column-center">
          <%= link_to raw("<button class=\"button\">#{@parent_categories[1].name}</button>"), "parent_categories/#{@parent_categories[1].id}" %>
          <br>
          <%= image_tag @parent_categories[1].photo.url(:medium), alt: @parent_categories[1].name %>
        </div>
        <div class="column-right">
          <%= link_to raw("<button class=\"button\">#{@parent_categories[2].name}</button>"), "parent_categories/#{@parent_categories[2].id}" %>
          <br>
          <%= image_tag @parent_categories[2].photo.url(:medium), alt: @parent_categories[2].name %>
        </div>
        <br>
        <%= link_to raw("<button class=\"button-contact\">Contact/Order</button>"), "contact" %>
    </div>

  </td>
</tr>


<%= render partial: 'layouts/footer' %>
