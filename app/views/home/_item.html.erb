<div class="col-xs-6 item-column">
    <div>
      <%= link_to image_tag( i.photo.url(:medium), class: "item_image_medium" ), "#item-image-large-#{i.id}", class: "fancybox" %>
    </div>
    <div style="display:none;">
        <div id="item-image-large-<%= i.id %>">
          <%= image_tag( i.photo.url(:large), class: "item-image-large" ) %>
        </div>
    </div>
    <script type="text/javascript">
//        $(".item_image_large").draggable();
    </script>
    <div class="item-name"><%= i.name %></div>
    <p class="item-description"><%= raw(i.description) %></p>
</div>
