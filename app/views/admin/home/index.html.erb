<h1>Edit Contact Info</h1>
<%= form_for @home, url: admin_home_path(@home) do |f| %>
    <div class="field">
      <%= f.label :content %><br>
      <%= f.text_area :content, rows: 8, style: "width: 400px" %>
    </div>
    <div class="field">
      <%= f.label :phone %><br>
      <%= f.text_field :phone %>
    </div>
    <div class="actions">
      <%= f.submit 'Update' %>
    </div>

<% end %>

